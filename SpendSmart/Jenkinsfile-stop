pipeline {
    agent any

    environment {
        COMPOSE_PROJECT_NAME = 'spendsmart'
    }

    stages {
        stage('Stop App and DB Containers') {
            steps {
                echo 'ðŸ›‘ Stopping all app and DB containers...'
                sh "docker compose -p ${COMPOSE_PROJECT_NAME} down"
            }
        }
    }

    post {
        success {
            echo "âœ… Application and DB stopped successfully."
        }
    }
}
