@using SpendSmart.ViewModels
@{
    ViewData["Title"] = "Expenses";
}
@*@model List<Expense>*@
@model ExpenseViewModel
<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br/>
    <hr />
    <h3>Total Expenses $@Model.TotalExpense</h3>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Value
                </th>
                <th>
                    Description
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var expense in Model.Expenses)
                {
                    <tr>
                    <td>
                    @expense.Id
                    </td>
                        <td>
                            @expense.Value
                        </td>
                        <td>
                            @expense.Description
                        </td>
                        <td>
                            <a asp-action="CreateEditExpense" asp-route-id="@expense.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="DeleteExpense" asp-route-id="@expense.Id" onclick="return confirm('Are you sure you want to delete this expense?');" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    
                }
            }
        </tbody>
    </table>
</div>